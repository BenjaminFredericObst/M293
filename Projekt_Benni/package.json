{
  "dependencies": {
    "css-minify": "^2.1.0",
    "html-minifier-terser": "^7.2.0",
    "lodash": "^4.17.21"
  },
  "scripts": {
    "minify:html": "npx html-minifier-terser --input-dir ./Templates --output-dir ./minimized --collapse-whitespace --file-ext html",
    "minify:css": "npx css-minify -d ./Templates -o ./minimized",
    "copy:assets": "npx cpy ./Templates/**/*.{jpg,png,gif,svg,ico} ./minimized --parents",
    "minify:all": "npm run minify:html && npm run minify:css && npm run copy:assets"
  },
  "devDependencies": {
    "cpy-cli": "^4.0.0"
  }
}
